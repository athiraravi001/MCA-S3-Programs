<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f5f6fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:padding="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up &amp; Join Us!"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1877F2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Name -->
            <EditText
                android:id="@+id/rname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Username -->
            <EditText
                android:id="@+id/runame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter username"
                android:inputType="text"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/remail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/rpswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Designation -->
            <EditText
                android:id="@+id/rdesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your designation"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rmale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:buttonTint="#1877F2" />

                <RadioButton
                    android:id="@+id/rfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginStart="16dp"
                    android:buttonTint="#1877F2" />

                <RadioButton
                    android:id="@+id/rother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:layout_marginStart="16dp"
                    android:buttonTint="#1877F2" />
            </RadioGroup>

            <!-- Languages Known -->
            <EditText
                android:id="@+id/rlanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type languages you know (e.g., English, Hindi)"
                android:inputType="text"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Date of Birth -->
            <EditText
                android:id="@+id/rdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your date of birth (DD/MM/YYYY)"
                android:inputType="date"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Privacy Checkbox -->
            <CheckBox
                android:id="@+id/rcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Agree Privacy and Policy"
                android:textColor="#333333" />

            <!-- Submit -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1877F2"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
